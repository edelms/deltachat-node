{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./lib",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "declaration": true,
        "types": [],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "excludeNotExported": true,
        "defaultCategory": "index",
        "includeVersion": true
    }
}
